{
    "version": "0.2.0",
    "configurations": [
        {
			"command": "npm run start:web",
			"name": "Run development server",
			"request": "launch",
			"type": "node-terminal"
		},
        {
            "name": "Debug FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "0.0.0.0",
                "--port", "6051",
                "--reload"
            ],
            "postDebugTask": "Stop mysql",
            "cwd": "${workspaceFolder}/api",
            "envFile": "${workspaceFolder}/.env",
            "jinja": true
        },
        {
            "name": "Test api",
            "type": "python",
            "request": "launch",
            "module": "pytest_watch",
            
            "cwd": "${workspaceFolder}/api",
            
        },
        {
            "name": "Test web",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run test:unit",
            "cwd": "${workspaceFolder}/web"
        }
    ],
    "compounds": [
        {
            "name": "Debug FastAPI and Web",
            "configurations": ["Debug FastAPI", "Run development server"],
            "preLaunchTask": "Run mysql",
            "stopAll": true
        }
    ]
}