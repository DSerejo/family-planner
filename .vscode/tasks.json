{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run mysql",
            "type": "shell",
            "command": "docker-compose up",
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Attaching to family-planner-db-1.*",
                    "endsPattern": "^Attaching to family-planner-db-1.*"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Stop mysql",
            "type": "shell",
            "command": "docker-compose down"
        }
    ]
}