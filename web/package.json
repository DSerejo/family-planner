{
	"name": "web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --host 0.0.0.0 --port 6050",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"prepare": "smui-theme compile static/smui.css -i src/theme",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit:watch": "vitest --mode dev",
		"test:unit": "vitest",
		"deploy": "npm run build -- --mode staging && gcloud app deploy build/app.yaml --verbosity=debug"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@smui-extra/bottom-app-bar": "^7.0.0",
		"@smui/button": "^7.0.0",
		"@smui/checkbox": "^7.0.0",
		"@smui/dialog": "^7.0.0",
		"@smui/form-field": "^7.0.0",
		"@smui/snackbar": "^7.0.0",
		"@smui/textfield": "^7.0.0",
		"@smui/top-app-bar": "^7.0.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.2",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@testing-library/jest-dom": "^6.4.6",
		"@testing-library/svelte": "^5.2.0",
		"@types/eslint": "^8.56.7",
		"dotenv": "^16.4.5",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"jsdom": "^24.1.0",
		"moment": "^2.30.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.2.3",
		"sass": "^1.77.8",
		"smui-theme": "^7.0.0",
		"svelte": "^4.2.18",
		"svelte-adapter-appengine": "^1.1.0",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@auth/core": "^0.34.1",
		"@auth/sveltekit": "^1.4.1",
		"graphql": "^16.9.0"
	}
}
